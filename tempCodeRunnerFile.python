import pandas as pd

# Sample DataFrame
data = {
    'antecedent_items': ['Organic Baby Spinach', 'Organic Carrot Bunch, Organic Baby Spinach', 'Organic Carrot Bunch']
}
df = pd.DataFrame(data)

# Function to check if there's only one item in the list
def has_single_item(item):
    return len(item.split(',')) == 1

# Apply the function to filter the DataFrame
filtered_df = df[df['antecedent_items'].apply(has_single_item)]

print(filtered_df)
